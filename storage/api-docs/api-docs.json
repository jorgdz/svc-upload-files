{
    "openapi": "3.0.0",
    "info": {
        "title": "Service Rest-Full",
        "description": "Documentación del mantenimiento de archivos.",
        "version": "1.0.1"
    },
    "paths": {
        "/api/files": {
            "get": {
                "tags": [
                    "Archivos"
                ],
                "summary": "Listar todos los archivos",
                "description": "Muestra todos archivos existentes paginados en formato JSON",
                "operationId": "getAllFiles",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Numero de la paginación",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": "1"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "401": {
                        "description": "No autorizado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                },
                "security": [
                    {
                        "SANCTUM": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Archivos"
                ],
                "summary": "Crear archivo",
                "description": "Crear un nuevo archivo y lo agregar al storage local.",
                "operationId": "addFile",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "file": {
                                        "description": "Archivo a subirse",
                                        "type": "file"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Se ha creado correctamente"
                    },
                    "400": {
                        "description": "No se cumple todos los requisitos"
                    },
                    "401": {
                        "description": "No autorizado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            }
        },
        "/api/files/{file}": {
            "get": {
                "tags": [
                    "Archivos"
                ],
                "summary": "Obtener un archivo",
                "description": "Muestra información específica de un archivo.",
                "operationId": "getFile",
                "parameters": [
                    {
                        "name": "file",
                        "in": "path",
                        "description": "Id del archivo",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": "3"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "401": {
                        "description": "No autorizado"
                    },
                    "404": {
                        "description": "No encontrado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            },
            "post": {
                "tags": [
                    "Archivos"
                ],
                "summary": "Actualizar un archivo",
                "description": "Actulizar un archivo específico por Id",
                "operationId": "editFile",
                "parameters": [
                    {
                        "name": "file",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": "3"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "file": {
                                        "description": "Archivo a subirse",
                                        "type": "file"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "No se cumple todos los requisitos"
                    },
                    "401": {
                        "description": "No autorizado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                }
            }
        }
    },
    "externalDocs": {
        "description": "Mas informacion para configuración",
        "url": "https://styde.net/como-documentar-una-api-en-laravel-usando-swagger"
    },
    "security": [
        []
    ]
}